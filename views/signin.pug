 <!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css")
    link(href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
    link(rel="stylesheet" href="css/style.css")
    title Sign into Dio-Drive
  head
    body#body
      main
        section.signup
          div.container
            div.signin-content
              div.signup-image
                img(src="img/signin-image.jpg" alt="sing up image")
                //- a.signup-image-link(href="/sign-up") Create an Account
              div.signin-form
                a(href="/")
                  img(src="img/jokebot.png" alt="dionysus bot" id="dionysus-bot")
                h2.form-title SIGN IN
                p.error= error
                p.error= success
                form(action="/sign-in" method="POST")
                  div.form-display
                    input(type="text" name="name" id="" placeholder="Your Name")
                    span: i.fa.fa-user(aria-hidden="true")
                  div.form-display
                    input(type="password" name="password" id="" placeholder="Password")
                    span: i.fa.fa-key(aria-hidden="true")
                  div.form-display.form-button
                    input(type="submit" value="Sign In")
                    p Don't have an account?
                      a(href="/sign-up")  sign up